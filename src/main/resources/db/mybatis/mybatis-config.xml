<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

<properties resource="db/mybatis/SqlMapConfig.properties" />
<typeAliases>
	<typeAlias alias="memberVO" type="kr.or.ddit.member.model.MemberVO"/>
	<typeAlias alias="boardVO" type="kr.or.ddit.board.model.BoardVO"/>
	<typeAlias alias="noticeVO" type="kr.or.ddit.notice.model.NoticeVO"/>
</typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="db/mybatis/sqlmap/member.xml"/>
    <mapper resource="db/mybatis/sqlmap/board.xml"/>
    <mapper resource="db/mybatis/sqlmap/notice.xml"/>
  </mappers>
</configuration>